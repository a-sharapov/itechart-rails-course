<%provide(:current_page_title, "My personalities - ")%>
<%= render :partial => "shared/cabinet_header" %>
<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Relation</th>
    <th>Description</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.relation %></td>
    <td><%= person.description %></td>
    <td><%= link_to 'Show', person_path(person) %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person_path(person), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Person', new_person_path(params[:user_id]) %>
<%= render :partial => "shared/cabinet_footer" %>
